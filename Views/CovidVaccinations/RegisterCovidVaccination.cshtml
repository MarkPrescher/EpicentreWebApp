@{
    ViewData["Title"] = "Create";
}

<div style="padding-left: 5%; padding-right: 5%; padding-bottom: 3%; margin-top: 0%;" class="content">
    <h1>COVID-19 Vaccination Booking</h1>

    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Register for a COVID-19 Vaccine</h4>
            <p class="card-category">Please fill out the form below to book for a COVID-19 Vaccine</p>
        </div>
        <div style="padding-top: 3.5%;" class="card-body">
            <form>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @* Get value from user table *@
                            <label class="bmd-label-floating">First Name</label>
                            <input value="@ViewBag.FirstName" type="text" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @* Get value from user table *@
                            <label class="bmd-label-floating">Last Name</label>
                            <input value="@ViewBag.LastName" type="text" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @* Get value from user table *@
                            <label class="bmd-label-floating">RSA Identification Number</label>
                            <input value="@ViewBag.ID" type="text" class="form-control" disabled>
                        </div>
                    </div>
                </div>
                <div style="padding-top: 1%;" class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @* Get value from user table *@
                            <label class="bmd-label-floating">Contact Number</label>
                            <input value="@ViewBag.Contact" type="text" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @* Get value from user table *@
                            <label class="bmd-label-floating">Email Address</label>
                            <input value="@ViewBag.Email" type="text" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @* Get value from user table - use if statement to display correct gender *@
                            @if (ViewBag.Gender == "Male")
                            {
                                <div style="padding-left: 20%;" class="form-check form-check-radio form-check-inline disabled">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" id="inlineRadio1" value="Male" checked> Male
                                        <span class="circle">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                                <div style="padding-left: 10%;" class="form-check form-check-radio form-check-inline disabled">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" id="inlineRadio2" value="Female" disabled> Female
                                        <span class="circle">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                            }
                            else
                            {
                                <div style="padding-left: 20%;" class="form-check form-check-radio form-check-inline disabled">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" id="inlineRadio1" value="Male" disabled> Male
                                        <span class="circle">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                                <div style="padding-left: 10%;" class="form-check form-check-radio form-check-inline disabled">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" id="inlineRadio2" value="Female" checked> Female
                                        <span class="circle">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div style="padding-top: 1%;" class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="bmd-label-floating">Medical Aid</label>
                            <input value="@ViewBag.Medical" type="text" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="bmd-label-floating">Membership Number</label>
                            <input value="@ViewBag.Membership" type="text" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="bmd-label-floating">Authorization Number</label>
                            <input value="@ViewBag.Auth" type="text" class="form-control" disabled>
                        </div>
                    </div>
                </div>
                <br />
                <div id="dropdown" style="margin-top: -2.5%; text-align: center;" class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="btn-group">
                               <button id="button-value" style="background-color: red;"type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                   Vaccination Site
                               </button>
                                <div class="dropdown-menu">
                                    <a onclick="clickedLocation('Stellenbosch, Western Cape')" style="cursor: pointer;" href="javascript:void(0)" class="dropdown-item">Stellenbosch, Western Cape</a>
                                    <a onclick="clickedLocation('Bellville, Western Cape')" style="cursor: pointer;" href="javascript:void(0)" class="dropdown-item">Bellville, Western Cape</a>
                                    <a onclick="clickedLocation('Rondebosch, Western Cape')" style="cursor: pointer;" href="javascript:void(0)" class="dropdown-item">Rondebosch, Western Cape</a>
                                    <a onclick="clickedLocation('Hillcrest, KwaZulu-Natal')" style="cursor: pointer;" href="javascript:void(0)" class="dropdown-item">Hillcrest, KwaZulu-Natal</a>
                                    <a onclick="clickedLocation('Pietermaritzburg, KwaZulu-Natal')" style="cursor: pointer;" href="javascript:void(0)" class="dropdown-item">Pitermaritzburg, KwaZulu-Natal</a>
                                    <a onclick="clickedLocation('Durban Central, KwaZulu-Natal')" style="cursor: pointer;" href="javascript:void(0)" class="dropdown-item">Durban Central, KwaZulu-Natal</a>
                                    <a onclick="clickedLocation('Randburg, Gauteng')" style="cursor: pointer;" href="javascript:void(0)" class="dropdown-item">Randburg, Gauteng</a>
                                    <a onclick="clickedLocation('Midrand, Gauteng')" style="cursor: pointer;" href="javascript:void(0)" class="dropdown-item">Midrand, Gauteng</a>
                                </div>
                            </div>
                            <br />
                            <span id="vaccination-site-validation" style="color: red; font-weight: bold; visibility: hidden;" class="text-danger">Please select a vaccination site</span>
                        </div>
                    </div>
                </div>
                <div id="vaccination-date" style="margin-top: -2.5%; text-align: center;" class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="label-control">Vaccination Date</label>
                            <br />
                            <input onclick="clickedDate()" type="date" id="booking-date">
                            <br />
                            <span id="vaccination-date-validation" style="color: red; font-weight: bold; visibility: hidden;" class="text-danger">Please select a vaccination date</span>
                        </div>
                    </div>
                </div>
                <center><button onclick="checkForm()" type="button" style="background-color: red; margin-top: 1%;" class="btn btn-primary">Next</button></center>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript">
    var vaccinationSiteChosen = false;
    var vaccinationLocation = null;

    function clickedLocation(location) {
        var display = document.getElementById('button-value');
        display.innerText = location;

        vaccinationSiteChosen = true;
        document.getElementById('vaccination-date-validation').style.visibility = "hidden";
        document.getElementById('vaccination-date').style.marginTop = "-2%";
        vaccinationLocation = location;
    }
    function clickedDate() {
        document.getElementById('vaccination-date-validation').style.visibility = "hidden";
        document.getElementById('booking').style.marginTop = "-2%";
    }
    function checkForm() {
        var vaccinationSiteFlag = true;
        var vaccinationDateFlag = true;

        var selectedDate = document.getElementById('booking-date').value;
        var dateParts = selectedDate.split('-');
        var bookingDate = new Date(dateParts[0], dateParts[1] - 1, dateParts[2]);
        var currentDate = new Date();
        currentDate.setHours(0, 0, 0, 0);

        if (!vaccinationSiteChosen) {
            document.getElementById('vaccination-site-validation').style.visibility = "visible";
            document.getElementById('vaccination-date').style.marginTop = "0%";
            vaccinationSiteFlag = false;
        } if (!document.getElementById('booking-date').value) {
            document.getElementById('vaccination-date-validation').style.visibility = "visible";
            document.getElementById('booking-date').style.marginTop = "-1%";
            vaccinationDateFlag = false;
        } if (bookingDate < currentDate) {
            document.getElementById('vaccination-date-validation').style.visibility = "visible";
            document.getElementById('booking-date').style.marginTop = "-1%";
            vaccinationDateFlag = false;
        } if (vaccinationSiteFlag && vaccinationDateFlag) {
            var vaccinationLocationUrl = null;
            var vaccinationDate = null;
        } if (vaccinationLocation == 'Stellenbosch, Western Cape') {
            vaccinationLocationUrl = 'JZjKyupGXO';
        } if (vaccinationLocation == 'Bellville, Western Cape') {
            vaccinationLocationUrl = 'eC4LdaFsWu';
        } if (vaccinationLocation == 'Rondebosch, Western Cape') {
            vaccinationLocationUrl = 'ABIf3LMQ4l';
        } if (vaccinationLocation == 'Hillcrest, KwaZulu-Natal') {
            vaccinationLocationUrl = 'WH2fbXxIdU';
        } if (vaccinationLocation == 'Pietermaritzburg, KwaZulu-Natal') {
            vaccinationLocationUrl = 'UQLsvizNLJ';
        } if (vaccinationLocation == 'Durban Central, KwaZulu-Natal') {
            vaccinationLocationUrl = 'NmCGgsAEnZ';
        } if (vaccinationLocation == 'Randburg, Gauteng') {
            vaccinationLocationUrl = '2464QfRQfc';
        } if (vaccinationLocation == 'Midrand, Gauteng') {
            vaccinationLocationUrl = 'gqoz3cT0jA';
        }
        vaccinationDate = document.getElementById('booking-date').value;
        window.location.href = '@Url.Action("TimeBookingVaccination", "CovidVaccinations")' + '?vaccinationLocation=' + vaccinationLocationUrl + '&vaccinationDate=' + vaccinationDate;
    }
</script>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
