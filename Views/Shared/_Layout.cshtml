<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/img/icon.png">
    <link rel="icon" type="image/png" href="~/img/icon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewData["Title"] - Epicentre COVID-19 Portal</title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <link href="~/css/material-dashboard.css?v=2.1.2" rel="stylesheet" />
</head>

<body class="">
    <div class="wrapper ">
        <div class="sidebar" data-color="danger" data-background-color="white" data-image="~/img/sidebar-1.jpg">
            <div class="logo">
                <img width="260" height="100" src="~/img/logo.png" />
            </div>
            @if (User.IsInRole("User"))
            {
                <div style="color: black;" class="sidebar-wrapper">
                    <ul class="nav">
                        <li class="nav-item">
                            <a style="color: black;" class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="material-icons">dashboard</i>
                                <p>Home</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a style="color: black;" class="nav-link" asp-controller="CovidTests" asp-action="Index">
                                <i class="material-icons">coronavirus</i>
                                <p>Tests</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a style="color: black;" class="nav-link" href="/Identity/Account/Manage">
                                <i class="material-icons">person</i>
                                <p>My Profile</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a style="color: black;" class="nav-link" asp-controller="Home" asp-action="Contact">
                                <i class="material-icons">contact_support</i>
                                <p>Contact</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a style="color: black;" class="nav-link" asp-controller="Home" asp-action="About">
                                <i class="material-icons">info</i>
                                <p>About</p>
                            </a>
                        </li>
                    </ul>
                    <div style="font-size: 80%; margin-top: 110%;" class="text-center">
                        Version 1.0.0
                    </div>
                    <div style="font-size: 85%;" class="copyright text-center">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>. Developed by TechGravity.
                    </div>
                </div>
            }
            else if (User.IsInRole("Nurse"))
            {
                <div class="sidebar-wrapper">
                    <ul class="nav">
                        <li class="nav-item">
                            <a style="color: black;" class="nav-link" asp-controller="CovidTests" asp-action="SearchForPatient">
                                <i class="material-icons">search</i>
                                <p>Search for Patient</p>
                            </a>
                        </li>
                    </ul>
                    <div style="font-size: 80%; margin-top: 195%;" class="text-center">
                        Version 1.0.0
                    </div>
                    <div style="font-size: 85%;" class="copyright text-center">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>. Developed by TechGravity.
                    </div>
                </div>
            }
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    @if (User.IsInRole("User"))
                    {
                        <div class="collapse navbar-collapse justify-content-end">
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">person</i>
                                        <p class="d-lg-none d-md-block">
                                            Account
                                        </p>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                        <a class="dropdown-item" href="/Identity/Account/Manage">My Profile</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Logout">Log out</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    }
                    else if (User.IsInRole("Nurse"))
                    {
                        <div class="collapse navbar-collapse justify-content-end">
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">person</i>
                                        <p class="d-lg-none d-md-block">
                                            Account
                                        </p>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Logout">Log out</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </nav>
            @RenderBody()
            @*<footer style="color: red; font-weight: bold;" class="footer">
                <div class="container-fluid">
                    <div class="copyright float-right">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>. Developed by TechGravity.
                    </div>
                </div>
