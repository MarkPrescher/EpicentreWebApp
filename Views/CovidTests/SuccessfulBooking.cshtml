
@{
    ViewData["Title"] = "Booking Successful";
}

<div style="text-align: center;" class="content">
    <h1 style="color: green;">You have successfully booked!</h1>
    <h2 style="color: black;">An email to confirm your booking has been sent to you.</h2>
    <h3 style="color: black; margin-top: 4%;">We'll see you for your COVID-19 <span style="color: red; font-weight: bold;">@ViewBag.TestType</span> at <span style="color: red; font-weight: bold;">@ViewBag.TestLocation</span> on <span style="color: red; font-weight: bold;">@ViewBag.TestDate</span> at <span style="color: red; font-weight: bold;">@ViewBag.TestTime</span>.</h3>
    <a style="color: red;" asp-controller="CovidTests" asp-action="Index"><h3>Done</h3></a>
</div>