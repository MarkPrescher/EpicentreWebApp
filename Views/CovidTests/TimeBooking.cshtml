
@{
    ViewData["Title"] = "TimeBooking";
}

<div style="padding-left: 5%; padding-right: 5%; padding-bottom: 3%;" class="content">
    <h1>Time Covid Test</h1>

    <label>@ViewBag.CovidTestType</label>
    <label>@ViewBag.TestingLocation</label>

    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Time for a COVID-19 Test (TEST DATA)</h4>
            <p class="card-category">Please fill out the details below, and choose time for a COVID-19 Test</p>
        </div>
        <div style="padding-top: 2%;" class="card-body">
            <form>
                <div style="padding-top: 1%; text-align: center;" class="row">
                    <div class="col-md-12">
                        <label>Date and time slots need to be here</label>
                    </div>
                </div>
                <button onclick="checkForm()" type="button" style="background-color: red;" class="btn btn-primary">Select Date and Time</button>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">

    function checkForm() {
        window.location.href = '@Url.Action("ConfirmBooking", "CovidTests")';
    }

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
