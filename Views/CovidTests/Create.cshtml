@model Epicentre.Models.CovidTest

@{
    ViewData["Title"] = "Create";
}

<div style="padding-left: 5%; padding-right: 5%; padding-bottom: 3%;" class="content">
    <h1>Register Covid Test</h1>

    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Register for a COVID-19 Test (TEST DATA)</h4>
            <p class="card-category">Please fill out the details below, and register for a COVID-19 Test</p>
        </div>
        <div style="padding-top: 2%;" class="card-body">
            <form>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @* Get value from user table *@
                            <label class="bmd-label-floating">Fist Name</label>
                            <input value="John" type="text" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @* Get value from user table *@
                            <label class="bmd-label-floating">Last Name</label>
                            <input value="Doe" type="text" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @* Get value from user table *@
                            <label class="bmd-label-floating">RSA Identification Number</label>
                            <input value="0123456789" type="text" class="form-control" disabled>
                        </div>
                    </div>
                </div>
                <div style="padding-top: 1%;" class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @* Get value from user table *@
                            <label class="bmd-label-floating">Contact Number</label>
                            <input value="0123456789" type="text" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @* Get value from user table *@
                            <label class="bmd-label-floating">Email Address</label>
                            <input value="johndoe@gmail.com" type="text" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @* Get value from user table - use if statement to display correct gender *@
                            @if (1 == 1)
                            {
                                <div style="padding-left: 20%;" class="form-check form-check-radio form-check-inline disabled">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" id="inlineRadio1" value="Male" checked> Male
                                        <span class="circle">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                                <div style="padding-left: 10%;" class="form-check form-check-radio form-check-inline disabled">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" id="inlineRadio2" value="Female" disabled> Female
                                        <span class="circle">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                            }
                            else
                            {
                                <div style="padding-left: 20%;" class="form-check form-check-radio form-check-inline disabled">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" id="inlineRadio1" value="Male" disabled> Male
                                        <span class="circle">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                                <div style="padding-left: 10%;" class="form-check form-check-radio form-check-inline disabled">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" id="inlineRadio2" value="Female" checked> Female
                                        <span class="circle">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div style="padding-top: 1%;" class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="bmd-label-floating">Medical Aid</label>
                            <input value="My Medical Aid" type="text" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="bmd-label-floating">Membership Number</label>
                            <input value="123456789" type="text" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="bmd-label-floating">Authorization Number</label>
                            <input value="1234" type="text" class="form-control" disabled>
                        </div>
                    </div>
                </div>
                <div style="padding-top: 1%; text-align: center;" class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-check form-check-radio form-check-inline">
                                <label class="form-check-label">
                                    <input onclick="testTypeClicked()" class="form-check-input" type="radio" name="inlineRadioOptions" id="pcr-swab-test" value="Male"> PCR Swab Test
                                    <span class="circle">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                            <div style="padding-left: 10%;" class="form-check form-check-radio form-check-inline">
                                <label class="form-check-label">
                                    <input onclick="testTypeClicked()" class="form-check-input" type="radio" name="inlineRadioOptions" id="rapid-antigen-test" value="Female"> Rapid Antigen Test
                                    <span class="circle">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                            <div style="padding-left: 10%;" class="form-check form-check-radio form-check-inline">
                                <label class="form-check-label">
                                    <input onclick="testTypeClicked()" class="form-check-input" type="radio" name="inlineRadioOptions" id="antibody-test" value="Female"> Antibody Test
                                    <span class="circle">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                            <br />
                        <span id="test-type-validation" style="color: red; font-weight: bold; visibility: hidden;" class="text-danger">Please select a test type</span>
                            <!--<div style="margin-left: 10%;" class="btn-group">
                                <button id="button-value" style="background-color: red;" type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Testing Site
                                </button>
                                <div class="dropdown-menu">
                                    <a onclick="clicked('Stellenbosch, Cape Town')" style="cursor: pointer;" href="javascript:void(0)" class="dropdown-item">Stellenbosch, Cape Town</a>
                                    <a onclick="clicked('Bellville, Cape Town')" style="cursor: pointer;" href="javascript:void(0)" class="dropdown-item">Bellville, Cape Town</a>
                                    <a onclick="clicked('Rondebosch, Cape Town')" style="cursor: pointer;" href="javascript:void(0)" class="dropdown-item">Rondebosch, Cape Town</a>-->
                                    @*<a class="dropdown-item" href="#">Hillcrest, KwaZulu-Natal</a>
                                    <a class="dropdown-item" href="#">Pitermaritzburg, KwaZulu-Natal</a>
                                    <a class="dropdown-item" href="#">Durban Central, KwaZulu-Natal</a>
                                    <a class="dropdown-item" href="#">Randburg, Gauteng</a>
                                    <a class="dropdown-item" href="#">Midrand, Gauteng</a>*@
                                <!--</div>
                            </div>-->
                        </div>
                    </div>
                </div>
                <div style="padding-top: 1%;" class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Additional Information</label>
                            <div class="form-group">
                                <label class="bmd-label-floating">Any additional information, such as medication, medical history, anything concerning that we need to know about</label>
                                <textarea class="form-control" rows="5"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <button onclick="checkForm()" type="button" style="background-color: red;" class="btn btn-primary">Next</button>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>



    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TEST_TYPE" class="control-label"></label>
                    <input class="form-control" />
                    
                </div>
                <div class="form-group">
                    <label asp-for="TEST_DATE" class="control-label"></label>
                    <input asp-for="TEST_DATE" class="form-control" />
                    <span asp-validation-for="TEST_DATE" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TEST_STATUS" class="control-label"></label>
                    <input asp-for="TEST_STATUS" class="form-control" />
                    <span asp-validation-for="TEST_STATUS" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TEST_RESULT" class="control-label"></label>
                    <input asp-for="TEST_RESULT" class="form-control" />
                    <span asp-validation-for="TEST_RESULT" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="USER_ID" class="control-label"></label>
                    <input asp-for="USER_ID" class="form-control" />
                    <span asp-validation-for="USER_ID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

