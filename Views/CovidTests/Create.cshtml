    if (!document.getElementById('pcr-swab-test').checked) {
        //alert('Checked');
    } else if (document.getElementById('inlineRadio2').checked) {
        //Female radio button is checked
    }

    function testTypeClicked() {
        
    }

    function nextClicked() {
        //alert('Next clicked');
        //window.location.href = '@Url.Action("EditProject", "Project")';
    }

    function checkForm() {

        if (!document.getElementById('pcr-swab-test').checked && !document.getElementById('rapid-antigen-test').checked && !document.getElementById('antibody-test').checked) {
            document.getElementById('test-type-validation').style.visibility = "visible";
        }
    }

    // all good
    function clicked(text) {
        var display = document.getElementById('button-value');
        if (text == 'Stellenbosch, Cape Town') {
            display.innerText = text;
        } else if (text == 'Bellville, Cape Town') {
            display.innerText = text;
        } else if (text == 'Rondebosch, Cape Town') {
            display.innerText = text;
        }
    }
</script>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
