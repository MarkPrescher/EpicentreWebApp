@model IEnumerable<Epicentre.Models.CovidTest>

@{
    ViewData["Title"] = "Covid Tests";
}

<div style="padding-left: 5%; padding-right: 5%; padding-bottom: 3%; margin-top: 0%;" class="content">
    <h1 style="padding-left: 2%;">Your Covid Tests</h1>

    @if (Model.Count() == 0)
    {
        <div style="padding-top: 5%; text-align: center;">
            <h3>You have no tests.</h3>
            <a asp-controller="CovidTests" asp-action="RegisterCovidTest" style="color: red;">Register for a new test</a>
        </div>
    }
    else
    {
        <a asp-controller="CovidTests" asp-action="RegisterCovidTest" style="color: red; padding-left: 2.5%;">Register for another test</a>
        <table style="margin-top: 3%;" class="table">
            <thead>
                <tr>
                    <th style="font-weight: bold;" class="text-center">Test Date</th>
                    <th style="font-weight: bold;" class="text-center">Test Type</th>
                    <th style="font-weight: bold;" class="text-center">Test Location</th>
                    <th style="font-weight: bold;" class="text-center">Test Status</th>
                    <th style="font-weight: bold;" class="text-center">Test Result</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-center">23/09/2021</td>
                    <td class="text-center">PCR Swab Test</td>
                    <td class="text-center">Hillcrest, KwaZulu-Natal</td>
                    <td class="text-center">Sample received</td>
                    <td class="text-center">Awaiting result...</td>
                </tr>
            </tbody>
        </table>
    }
</div>