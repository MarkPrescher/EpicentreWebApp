@model IEnumerable<Epicentre.Models.CovidTest>

@{
    ViewData["Title"] = "Covid Tests";
}

<div style="padding-left: 1%; padding-right: 2%; padding-bottom: 3%; margin-top: 0%;" class="content">
    <h1 style="padding-bottom: 1%; padding-left: 4%; color: black; font-weight: bold;">Your Covid Tests</h1>

    @if (Model.Count() == 0)
    {
        <div style="padding-top: 5%; text-align: center;">
            <h3 style="color: black;">You have no tests.</h3>
            <a asp-controller="CovidTests" asp-action="RegisterCovidTest" style="color: red; font-weight: bold;">Register for a new test</a>
        </div>
    }
    else
    {
        <a asp-controller="CovidTests" asp-action="RegisterCovidTest" style="color: red; padding-left: 6%; font-weight: bold;">Register for another test</a>
        <table style="color: black; margin-top: 2%;" class="table">
            <thead>
                <tr>
                    <th style="font-weight: bold;" class="text-center">
                        @Html.DisplayNameFor(model => model.TEST_DATE)
                    </th>
                    <th style="font-weight: bold;" class="text-center">
                        @Html.DisplayNameFor(model => model.TEST_TYPE)
                    </th>
                    <th style="font-weight: bold;" class="text-center">
                        @Html.DisplayNameFor(model => model.TEST_LOCATION)
                    </th>
                    <th style="font-weight: bold;" class="text-center">
                        @Html.DisplayNameFor(model => model.TEST_STATUS)
                    </th>
                    <th style="font-weight: bold;" class="text-center">
                        @Html.DisplayNameFor(model => model.TEST_RESULT)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TEST_DATE)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TEST_TYPE)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TEST_LOCATION)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TEST_STATUS)
                    </td>
                    @if (item.TEST_RESULT == "Positive")
                    {
                        <td style="color: green;" class="text-center">
                            @Html.DisplayFor(modelItem => item.TEST_RESULT)
                        </td>
                    }
                    else if (item.TEST_RESULT == "Negative")
                    {
                        <td style="color: red;" class="text-center">
                            @Html.DisplayFor(modelItem => item.TEST_RESULT)
                        </td>
                    }
                    else
                    {
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.TEST_RESULT)
                        </td>
                    }
                </tr>
                }
            </tbody>
        </table>
    }
</div>